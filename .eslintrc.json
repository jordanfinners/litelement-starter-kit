{
  "extends": [
    "eslint:recommended",
    "google",
    "plugin:wc/best-practice",
    "plugin:lit/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "rules": {
    "class-methods-use-this": [
      "error",
      {
        "exceptMethods": [
          "render"
        ]
      }
    ]
  },
  "plugins": [
    "html",
    "wc",
    "lit"
  ],
  "globals": {
    "describe": true,
    "beforeEach": true,
    "afterEach": true,
    "it": true
  }
}
