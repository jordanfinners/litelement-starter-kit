{
  "extends": [
    "eslint:recommended",
    "google",
    "eslint-config-airbnb-base",
    "plugin:wc/best-practice",
    "plugin:lit/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "rules": {
    "import/extensions": "off",
    "no-underscore-dangle": "off",
    "import/prefer-default-export": "off",
    "class-methods-use-this": "off",
    "prefer-destructuring": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "peerDependencies": true,
        "devDependencies": ["**/tests/**/*.js", "karma.conf.js", "rollup.config.js", "rollup.test.config.js","service-worker.config.js", "index.config.js"]
      }
    ],
    "valid-jsdoc": "error",
    "require-jsdoc": "error"
  },
  "plugins": [
    "html",
    "wc",
    "lit"
  ],
  "globals": {
    "ShadyCSS": true
  }
}
